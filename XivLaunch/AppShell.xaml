<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XivLaunch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XivLaunch"
    Title="XIVLoader"
    Shell.BackgroundColor="{AppThemeBinding Light=WhiteSmoke, Dark=Black}"
    Shell.TitleColor ="{AppThemeBinding Light=Black, Dark=White}"
    Shell.FlyoutBehavior="Disabled"
    Shell.FlyoutBackgroundColor="{AppThemeBinding Light=WhiteSmoke, Dark=Black}">

    <ShellContent
        Title="XIVLoader"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
